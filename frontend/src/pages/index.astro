  <script>
    // Simple Carousel Implementation
    function initCarousel(carouselId, pillContainerId, pillId) {
      const carousel = document.getElementById(carouselId);
      if (!carousel) return;

      const container = carousel.querySelector('.embla__container');
      const slides = carousel.querySelectorAll('.embla__slide');
      const pillContainer = document.getElementById(pillContainerId);
      const pills = pillContainer ? pillContainer.querySelectorAll('.hoverpill') : [];
      const backpill = document.getElementById(pillId);

      let currentIndex = 0;
      const slideCount = slides.length;

      function updateCarousel(index) {
        currentIndex = index;
        const offset = -100 * index;
        container.style.transform = `translateX(${offset}%)`;
        container.style.transition = 'transform 0.3s ease';

        // Update pills
        pills.forEach((pill, i) => {
          if (i === index) {
            pill.classList.add('selected');
          } else {
            pill.classList.remove('selected');
          }
        });

        // Update backpill position
        if (backpill && pills[index]) {
          const pillRect = pills[index].getBoundingClientRect();
          const containerRect = pillContainer.getBoundingClientRect();
          backpill.style.left = (pills[index].offsetLeft) + 'px';
          backpill.style.width = pills[index].offsetWidth + 'px';
        }
      }

      // Add click handlers to pills
      pills.forEach((pill, index) => {
        pill.addEventListener('click', () => {
          updateCarousel(index);
        });
      });

      // Auto-rotate carousel every 5 seconds
      setInterval(() => {
        const nextIndex = (currentIndex + 1) % slideCount;
        updateCarousel(nextIndex);
      }, 5000);

      // Initialize
      updateCarousel(0);
    }

    // Initialize both carousels
    initCarousel('intro_carousel', 'intro', 'intropill');
    initCarousel('atw_carousel', 'atw', 'atwpill');

    // Modal functionality
    const modal = document.getElementById('myModal');
    const modalLabel = document.getElementById('myModalLabel');
    const modalImage = document.getElementById('myModalImage');
    const modalLink = document.getElementById('myModalLink');
    const citySpans = document.querySelectorAll('.cityList span[data-name]');
    const dismissButtons = document.querySelectorAll('.myModalDismiss');

    citySpans.forEach(span => {
      span.addEventListener('click', function() {
        const cityName = this.getAttribute('data-name');
        const sizeMB = this.getAttribute('data-size-mb');
        modalLabel.textContent = cityName.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase());
        modalImage.src = `/static/frontend/images/cities/${cityName}.png`;
        modalLink.onclick = () => {
          window.location.href = `/download/${cityName}.zip`;
        };
        modal.classList.remove('dn');
        modal.classList.add('show');
      });
    });

    dismissButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        modal.classList.add('dn');
        modal.classList.remove('show');
      });
    });
  </script>
