    .smallHeading {
      margin-top: 2em;
      font-family: Quicksand;
      font-size: 24px;
      font-weight: 700;
      color: black;
    }

    .bg-green {
      background-color: #DCF4E8;
    }

    .productKind {
      padding-bottom: 30px;
      display: flex;
      flex-direction: column;
      text-align: center;
      border-radius: 30px;
      flex: 1 1 0px;
    }

    .topPill {
      position: absolute;
      top: -9px;
      max-width: fit-content;
      padding-left: 1rem;
      padding-right: 1rem;
      padding-top: 2px;
      padding-bottom: 2px;
      color: white;
      position: relative;
      margin-left: auto;
      margin-right: auto;
      border-radius: 52px;
      background-color: #4F00F6;
      letter-spacing: 2px;
      font-weight: 300;
      font-family: Quicksand;
    }

    .productKind img {
      margin-top: 2rem;
      margin-bottom: 2rem;
      margin-left: auto;
      margin-right: auto;
      width: 50%;
    }

    .pillContainer {
      box-shadow: 0px 4px 20px 0px rgba(0, 3, 51, 0.10);
      border-radius:60px;
      height:60px;
      padding: 2 6 2 6;
      z-index: 99;
      padding-left: 6px;
      padding-right: 6px;
    }

    .hoverpill {
      height: 50px;
      display: flex;
      align-items: center;
      position: relative;
      color: black;
      cursor: pointer;
    }

    .hoverpill:not(:last-child) {
      margin-right: 2em;
    }

    .hoverpill_text {
      padding-left:20px;
      padding-right:20px;
      display: flex;
      align-items: center;
    }

    .hoverpill.selected {
      color: white;
      transition: 0.2s linear;
    }

    .backpill {
      border-radius: 60px;
      position: absolute;
      width: 100%;
      height: 100%;
      background-color: black;
      transition: left 0.2s ease;
      z-index: -999;
    }

    .bignum {
      font-family: Quicksand;
      font-size: 24px;
      margin-right: 16px;
    }

    .softwareIcon {
      display: flex;
      flex-direction: column;
    }

    .mt35 {
      margin-top: 35px;
    }

    .mw1152 {
      max-width: 1152px;
    }

    .embla {
      overflow: hidden;
    }

    .embla__container {
      display: flex;
    }

    .embla__slide {
      flex: 0 0 100%;
      min-width: 0;
    }

    .embla__slide img {
      max-height: 800px;
    }

    .mobileLabel {
      position: relative;
      bottom: 40px;
      background-color: white;
      border-radius: 16px;
      padding-left: 16px;
      padding-right: 16px;
      padding-top: 4px;
      padding-bottom: 4px;
    }

    .cityList span {
      cursor: pointer;
      padding: 4px 0;
    }

    .cityList span:hover {
      text-decoration: underline;
    }

    #myModal.show {
      display: block;
    }

    .z-max {
      z-index: 9999;
    }

    .o-20 {
      opacity: 0.2;
    }

    .vh-100 {
      height: 100vh;
    }

    .dim:hover {
      opacity: 0.8;
    }

    .grow:hover {
      transform: scale(1.05);
      transition: transform 0.2s;
    }
  </style>

